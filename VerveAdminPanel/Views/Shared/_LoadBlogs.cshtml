                </div>
                <div id="@i" class="panel-collapse collapse in">
                    <div class="box-body">
                        @*@blogs.BlogHeading*@

                        @if (ViewBag.Comments != null)
                        {
                            foreach (BusinessLogic.EntityClass.CommentEntity Comment in ViewBag.Comments)
                            {
                                if (blogs.BlogId == Comment.BlogId)
                                {
                                    <div class="alert alert-info">
                                        @Comment.Comment
                                    </div>

                                }

                            }
                        }


                    </div>
                </div>
            </div>
            i = i + 1;
