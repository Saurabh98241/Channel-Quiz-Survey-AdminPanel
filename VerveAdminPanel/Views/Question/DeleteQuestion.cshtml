@model BusinessLogic.EntityClass.QuestionEntity
@{
    ViewBag.Title = "DeleteQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Are you sure you want to delete this Question?</h3>
            </div>
            <div class="form-horizontal Padding10">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Question)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Question)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        @Html.ActionLink("Back to List", "Question", "Question", new { @class = "btn btn-danger" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>