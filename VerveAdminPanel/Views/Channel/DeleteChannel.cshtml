@model BusinessLogic.EntityClass.ChannelEntity

@{
    ViewBag.Title = "DeleteChannel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Are you sure you want to delete this channel?</h3>
            </div>

            <div class="form-horizontal Padding10">

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ChannelName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ChannelName)
                    </dd>


                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        @Html.ActionLink("Back to List", "Channel", "Channel", new { @class = "btn btn-danger" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>